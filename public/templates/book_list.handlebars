  {{#if this.length}}
    <table class="library-list">
      <tr>
        <th>Title</th>
        <th>Author</th>
        <th>Publication Year</th>
        <th>Owner</th>
        <th></th>
      </tr>
    
      {{#each this}}
        <tr class="book-item available">
          <td>{{this.title}} {{this.subtitle}}</td>
          <td>{{this.author}}</td>
          <td>{{this.publication_year}}</td>
          <td>{{this.username}}</td>
          {{#if book_status}}
            <td>Checked out</td>
          {{else}}
            <td><a href="/api/mw/checkout-book?book-id={{this.book_id}}">Checkout</a></td>
          {{/if}}
       </tr>  
      {{/each}}
    </table>
  {{else}}
    <h3>There are no books available</h3>
  {{/if}}
