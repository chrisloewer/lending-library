<div class="main-container">
  <h1>Your Library</h1>

  <a href="/add-book" class="button button-light">Add Book</a>

  {{#if this.length}}
    <table class="library-list">
      <tr>
        <th>Title</th>
        <th class="author">Author</th>
        <th class="edition">Edition</th>
        <th class="pub-year">Publication Year</th>
      </tr>
    
      {{#each this}}
        <tr class="book-item">
          <td>{{this.title}} {{this.subtitle}}</td>
          <td class="author">{{this.author}}</td>
          <td class="edition">{{this.edition}}</td>
          <td class="pub-year">{{this.publication_year}}</td>
          {{#if book_status}}
            <td><a href="/api/mw/return-book?book-id={{this.book_id}}">Return</a></td>
          {{else}}
            <td>Available</td>
          {{/if}}
        </tr>
      {{/each}}
    </table>
  {{else}}
    <h3>You have no items in your Library</h3>
  {{/if}}
</div>
